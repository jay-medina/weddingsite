{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "strict": true,
    "sourceMap": true,
    "pretty": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
